@model TaramaMVC.Models.Grup

@{
    ViewData["Title"] = "Grup Create";
}

<div class="container-sm">
    <h1 class="bg-info text-white">GRUP EKLE</h1>

    <form asp-action="Create">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col form-group md-2">
                @* <label asp-for="Name" class="control-label"></label>*@
                <input asp-for="Name" class="form-control" placeholder="Grup Adı" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col form-group md-2 mt-2">
                @* <input type="submit" value="Create" class="btn btn-secondary" />*@
                <button type="submit" class="form-control btn-secondary">
                    <svg class="bi d-block mx-auto mb-1" width="16" height="16"><use xlink:href="#save1" /></svg>
                    Kaydet
                </button>
            </div>
        </div>
   
        @*   <div class="form-group md-2 mt-2">
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>*@


    </form>
    <div class="row">
        <div class="col form-group md-2 mt-2">
            <a asp-action="Index" class="form-control btn btn-secondary">
                <svg class="bi d-block mx-auto mb-1" width="16" height="16"><use xlink:href="#back1" /></svg>
                Geri
            </a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
