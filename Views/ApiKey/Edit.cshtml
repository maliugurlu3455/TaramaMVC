@model TaramaMVC.Models.ApiKeys

@{
    ViewData["Title"] = "Serp Api Key";
}
<div class="container">
   
<form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
            <div class="form-group md-2 mt-2">
                    @*<label asp-for="Key" class="control-label">Serp Api Key</label>*@
                    <input asp-for="Key" class="form-control" placeholder="Serp Api Key" />
                    <span asp-validation-for="Key" class="text-danger"></span>
            </div>
                
                    <div class="form-group md-2 mt-2">
                    <input asp-for="Sayi" class="form-control" placeholder="Kalan Sayı" />
                    <span asp-validation-for="Sayi" class="text-danger"></span>
                    </div>
                <div class="form-group md-2 mt-2">
                    @Html.DropDownListFor(modelItem => modelItem.IsTamam, new [] { new SelectListItem { Text = "True", Value="True" } , new SelectListItem { Text = "False", Value="False"} },"Bitti Mi?",new {@class = "form-control"})
                   @* <input asp-for="IsTamam" class="form-control" placeholder="BittiMi" />*@
                    <span asp-validation-for="IsTamam" class="text-danger"></span>
                </div>
                <div class="form-group md-2 mt-2">
                <button type="submit" class="form-control btn-secondary">
                    <svg class="bi d-block mx-auto mb-1" width="16" height="16"><use xlink:href="#save1" /></svg>
                    Kaydet
                    </button>
                </div>

                <div class="form-group md-2 mt-2">
                    <a asp-action="Index" class="form-control btn btn-secondary">
                        <svg class="bi d-block mx-auto mb-1" width="16" height="16"><use xlink:href="#back1" /></svg>
                        Geri
                    </a>
                </div>
</form>
      
 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
