@model TaramaMVC.Models.AnaBilimDali

@{
    ViewData["Title"] = "Ana Bilim Dalı Düzenleme";
}
<div class="container-sm">
     <form asp-action="Edit">
    <div class="table-responsive-sm">
       
        <table class="table table-bordered table-hover table-striped align-middle">
            <thead class="table-light">
                <tr>
                <th>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <label asp-for="Name" class="control-label">Ana Bilim Dalı</label>

                    </th>
                 
                 
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </td>
                <tr>
                    <td>
                            <div class="Row md-2 mt-2">
                            <button type="submit" class="form-control btn-secondary">
                            <svg class="bi d-block mx-auto mb-1" width="16" height="16"><use xlink:href="#save1" /></svg>
                            Kaydet
                        </button>
                            </div>
                    </td>
                </tr>
                <tr>
            <td>
                            <div class="Row md-2 mt-2">
                            <a asp-action="Index" class="form-control btn btn-secondary md-2 mt-2">
                            <svg class="bi d-block mx-auto mb-1" width="16" height="16"><use xlink:href="#back1" /></svg>
                            Geri
                            </a>
        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        
    </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
