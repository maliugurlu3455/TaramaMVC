@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roller";
}
<div class="container">

    <div class="row mt-2 md-2 row-cols-2">
        <div class="col-6 align-content-start">
            <h2 class="text-primary mx-4">  <svg class="bi me-2 mx-auto mb-1" width="24" height="24"><use xlink:href="#person1"></use></svg> @ViewData["Title"] </h2>
        </div>

        <div class="col text-end align-content-end">
            <a asp-action="Create" class="btn btn-primary">
                <svg class="bi me-2 mx-auto mb-1" width="16" height="16"><use xlink:href="#create1" /></svg>
                Rol Ekle
            </a>
        </div>
       
    </div>

    <hr />
    <div class="row md-2 mt-2">
    <div class="table-responsive">
<table id="tblliste" class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Users</th>
            <th>Update</th>
            <th>Delete</th></tr>
    </thead>
    <tbody>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td>

                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>
    </div>
</div>
