@model IEnumerable<TaramaMVC.Models.Personel>

@{
    ViewData["Title"] = "Akademik Kadromuz";
    int RowNo = 0;
}


<div class="container-sm md-2 mt-2">
    <div class="row md-2 mt-2">
        <div class="col md-2 mt-2 text-md-end">
        <a class="btn btn-secondary btn-sm" asp-area="" asp-controller="Personeller" asp-action="VeriGuncelle">Akademik Yayın Güncelle</a>
            <a class="btn btn-secondary btn-sm" asp-area="" asp-controller="Personeller" asp-action="YayinAlintiGuncelle">Yayın Alıntı Güncelle</a>
            <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Personeller" asp-action="YayinAlinti">Yayın Alıntı</a>
        <a class="btn btn-secondary btn-sm" asp-area="" asp-controller="Personeller" asp-action="VerileriSil">Akademik Yayınları Sil</a>
    <a class="btn btn-secondary btn-sm" asp-area="" asp-controller="Personeller" asp-action="Test">Test</a>
    </div>

    </div>
    <div class="container md-2 mt-2">
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped table-dashboard data-table" id="tblliste">
        <thead >
           
        <tr>
            <th>
                @Html.Label("SıraNo")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnaBilimDallari)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScholarName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alintilanma)
            </th>
                <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>@{
                        RowNo++;
                    } @RowNo</td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.AnaBilimDallari.Name)
            </td>
                <td>
                    <a title="https://scholar.google.com/citations?hl=tr&view_op=search_authors&mauthors=@item.ScholarName" href="https://scholar.google.com/citations?hl=tr&user=@item.User" target="_blank">@Html.DisplayFor(modelItem => item.ScholarName)</a>
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alintilanma)
                </td>
            <td>
                        <div class="btn-group btn-group-justified">

                                  
                                       @if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                  <a asp-action="AGuncelle" asp-route-id="@item.Id" class="btn-sm btn-block">
                                        <svg class="bi d-block mx-auto mb-1" width="16" height="16"><use xlink:href="#departman" /></svg>Alıntı Güncelle
                                    </a>
                               <a asp-action="Details" asp-route-id="@item.Id" class="btn-sm btn-block">
                                <svg class="bi d-block mx-auto mb-1" width="16" height="16"><use xlink:href="#view1" /></svg>İncele
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn-sm btn btn-block">
                                <svg class="bi d-block mx-auto mb-1" width="16" height="16"><use xlink:href="#edit1" /></svg>Düzenle
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-sm btn-block">
                                <svg class="bi d-block mx-auto mb-1" width="16" height="16"><use xlink:href="#delete1" /></svg>Sil
                            </a>
                                    }else
                                    {
                                           <a asp-action="Details" asp-route-id="@item.Id" class="btn-sm btn-block">
                                <svg class="bi d-block mx-auto mb-1" width="16" height="16"><use xlink:href="#view1" /></svg>İncele
                                        </a>
                                    }
                                    

                        </div>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#tblliste').DataTable();
    });

</script>

