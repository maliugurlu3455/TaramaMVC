@model TaramaMVC.Models.Personel

@{
    ViewData["Title"] = "Akademik Personel Ekleme";
}

<div class="container-sm">
     
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group md-2 mt-2">
            <label asp-for="Name" class="control-label text-secondary  m-lg-3 bg-light">Adı</label>
                <input asp-for="Name" class="form-control" placeholder="Name" />
                
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group md-2 mt-2">
            <label asp-for="SurName" class="control-label text-secondary  m-lg-3 bg-light">Soyadı</label>
             <input asp-for="SurName" class="form-control" placeholder="Soyadı" />
             <span asp-validation-for="SurName" class="text-danger"></span>
         </div>
            
            <div class="form-group md-2 mt-2">
            <label asp-for="AnaBilimDallariId" class="control-label text-secondary m-lg-3 bg-light">Ana Bilim Dallari</label>
                <select asp-for="AnaBilimDallariId" class="form-control" asp-items="ViewBag.AnaBilimDallariId" placeholder="AnaBilimDalı"></select>
            </div>
           <div class="form-group md-2 mt-2">
            <label asp-for="ScholarName" class="control-label text-secondary m-lg-3 bg-light">Google Scholar Name</label>
            <input asp-for="ScholarName" class="form-control" placeholder="Scholar Name" />
            <span asp-validation-for="ScholarName" class="text-danger"></span>
            </div>
        <div class="form-group md-2 mt-2">
            <label asp-for="User" class="control-label text-secondary m-lg-3 bg-light">Google Scholar User ID</label>
            <input asp-for="User" class="form-control" placeholder="User ID" />
            <span asp-validation-for="User" class="text-danger"></span>
        </div>
            <div class="row">
                <div class="col form-group md-2 mt-2">
                    @* <input type="submit" value="Create" class="btn btn-secondary" />*@
                    <button type="submit" class="form-control btn-secondary">
                        <svg class="bi d-block mx-auto mb-1" width="16" height="16"><use xlink:href="#save1" /></svg>
                        Kaydet
                    </button>
                </div>
            </div>
         
        </form>
        <div class="row">
            <div class="col form-group md-2 mt-2">
                <a asp-action="Index" class="form-control btn btn-secondary">
                    <svg class="bi d-block mx-auto mb-1" width="16" height="16"><use xlink:href="#back1" /></svg>
                    Geri
                </a>
            </div>
        </div>
    
</div>

@*<div class="row">
    <a asp-action="Index">Back to List</a>
</div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
