@model TaramaMVC.Models.Personel

@{
    ViewData["Title"] = "Akademik Personel Ekleme";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group md-2 mt-2">
               @* <label asp-for="Name" class="control-label"></label>*@
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group md-2 mt-2">
             @*   <label asp-for="SurName" class="control-label"></label>*@
                <input asp-for="SurName" class="form-control" placeholder="SurName" />
                <span asp-validation-for="SurName" class="text-danger"></span>
            </div>
            <div class="form-group md-2 mt-2">
              @*  <label asp-for="AnaBilimDallariId" class="control-label"></label>*@
                <select asp-for="AnaBilimDallariId" class="form-control" asp-items="ViewBag.AnaBilimDallariId" placeholder="AnaBilimDalı"></select>
            </div>
            <div class="form-group md-2 mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

